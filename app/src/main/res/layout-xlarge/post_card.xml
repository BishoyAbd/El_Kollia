<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    app:cardCornerRadius="7dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/profile_post_id_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/profile_bisho"
                />


            <TextView
                android:id="@+id/post_owner_name_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profile_post_id_imageView"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profile_post_id_imageView"
                android:text="Bishoy Abd Lamey"
                android:textColor="#000000"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/post_date_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@id/post_owner_name_tv_id"
                android:layout_toEndOf="@+id/profile_post_id_imageView"
                android:text="14:12|12.10.2016"
                android:textSize="10sp"

                />


        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/textView_post_content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_post_test"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"



            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_greyish"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            >



            <Button
                android:id="@+id/button_upVote_inPost_id"
                android:layout_width="@dimen/button_width__like_dislike"
                android:layout_height="@dimen/button_height__like_dislike"
                android:layout_alignParentStart="true"
                android:background="@drawable/likegreen_btn"
                android:layout_marginEnd="5dp"
                >


            </Button>

            <Button
                android:layout_toEndOf="@id/button_upVote_inPost_id"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_width="@dimen/button_width__like_dislike"
                android:layout_height="@dimen/button_height__like_dislike"
                android:background="@drawable/dislikered_btn"
                android:layout_marginEnd="5dp"

                >


            </Button>

            <Button
                android:id="@+id/button_show_comments_inPost_id"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/show_comment"
                >


            </Button>

        </RelativeLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>

<!--not for my mobile -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="3dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/profile_post_id_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/profile_bisho" />


            <TextView
                android:id="@+id/post_owner_name_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profile_post_id_imageView"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profile_post_id_imageView"
                android:text="Bishoy Abd Lamey"
                android:textColor="#000000"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/post_date_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_owner_name_tv_id"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profile_post_id_imageView"
                android:text="14:12|12.10.2016"
                android:textSize="10sp"

                />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView_post_content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_post_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white_greyish" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center">


                <Button
                    android:id="@+id/button_upVote_inPost_id"
                    android:layout_width="@dimen/button_width__like_dislike"
                    android:layout_height="@dimen/button_height__like_dislike"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/like_btn">


                </Button>


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
             />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <RelativeLayout


                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/tv_basic_info_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="3dp"
                    android:text="Basic Info"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_below="@id/tv_basic_info_const"
                   android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"

                    android:id="@+id/tv_id_name_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : "/>
                <TextView
                    android:layout_below="@id/tv_basic_info_const"
                    android:layout_toEndOf="@id/tv_id_name_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bishoy abd "/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tv_id_age_const"
                    android:layout_below="@id/tv_id_name_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age : "
                    />
                <TextView
                    android:layout_below="@+id/tv_id_name_const"
                    android:layout_toEndOf="@id/tv_id_age_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/tv_id_year_const"
                    android:layout_below="@id/tv_id_age_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year : "
                    />
                <TextView
                    android:layout_marginBottom="4dp"

                    android:layout_below="@+id/tv_id_age_const"
                    android:layout_toEndOf="@id/tv_id_year_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS"
                    />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/tv_id_department_const"
                    android:layout_below="@id/tv_id_year_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department : "
                    />
                <TextView
                    android:layout_marginBottom="4dp"
                    android:layout_below="@+id/tv_id_year_const"
                    android:layout_toEndOf="@id/tv_id_department_const"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS"
                    />

            </RelativeLayout>


            </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_posts_id_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="6dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_bisho"
            android:layout_alignBottom="@+id/header_cover_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="189dp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginStart="111dp"
            android:layout_marginBottom="34dp"
            android:layout_alignBottom="@+id/header_cover_image"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Bishoy Abd Lamey"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="3rd year CS"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/Base.Theme.AppCompat.Dialog">


    <EditText
        android:id="@+id/question_dialog_et_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="left"
        android:text="what is in your mind?"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">


        <Button
            android:id="@+id/cancel_quest_dialogBtn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/dialog_post_btn_selector"
            android:text="Cancel" />


        <Button
            android:id="@+id/post_quest_dialogBtn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/dialog_post_btn_selector"
            android:text="Post" />
    </LinearLayout>

</LinearLayout>